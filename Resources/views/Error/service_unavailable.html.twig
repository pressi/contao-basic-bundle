{% extends "@IIDOBasic/Error/layout.html.twig" %}

{% block title %}
    {{ error.unavailable }} :: {{ websiteTitle() }}
{% endblock %}

{% block style %}
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,800|Inconsolata' rel='stylesheet' type='text/css'>
    <link href="bundles/iidobasic/css/frontend/iido/styles.css" rel="stylesheet" type="text/css">
    <style>
        * {
            margin: 0;
            padding: 0;
        }
        body {
            background:#333 url('bundles/iidobasic/images/frontend/background/brickwall-dark.png') 0 0 repeat;
        }
        html,body {
            min-height: 100%;
            height: 100%;
        }
        #container {
            display: table;
            width: 640px;
            height: 100vh;
            margin: 0 auto;
        }
        #container .inside {
            display: table-cell;
            height: 100%;
            text-align: center;
            vertical-align: middle;
        }
        #container img {
            margin: -130px 0 0;
        }
        #container h1 {
            color: #fff;
            font-family: 'Open Sans', sans-serif;
            font-size: 40px;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin: 40px 0 38px;
        }
        #container p {
            margin: 0;
            padding: 0;
            color: #fff;
            font-family: 'Open Sans', sans-serif;
            font-size: 20px;
            font-weight: 400;
            line-height: 1.4;
        }
        #container .publisher {
            position: fixed;
            right: 5px;
            bottom: 5px;
        }
        #container .publisher img {
            margin: 0;
        }
        #container .publisher .txt{
            color: #ccc;
            font-family: 'Inconsolata', sans-serif;
            font-size: 12px;
            padding: 0 0 0 2px;
        }
        #container .publisher a {
            text-decoration: none;
        }
        #container .publisher a:hover .txt {
            color: #4285B9;
        }
        #container .ce_socialmedia {
            padding: 30px 0 0;
        }
        #container .ce_socialmedia .socialmedia-item-link {
            color: #fff;
        }
        /*#container .socialmedia-item-popup {*/
        /*display: none;*/
        /*}*/

        #container .ce_socialmedia i {
            padding: 4px 0;
        }

        #container .ce_socialmedia i .icon-tag {
            width: 22px;
            height: 22px;
            margin: 0;
            line-height: 0;
            fill: white;
        }
        #container .ce_socialmedia i.icon-google-plus {
            padding: 7px 0;
        }
        #container .ce_socialmedia i.icon-google-plus .icon-tag {
            width: 27px;
            height: 27px;
        }
    </style>
    <script src="assets/jquery/js/jquery.min.js" type="text/javascript"></script>
    <script src="bundles/iidobasic/javascript/jquery/iido/IIDO.Content.js" type="text/javascript"></script>
{% endblock %}

{% block main %}
    <p>{{ error.maintenance|replaceNL|raw }}</p>
{% endblock %}